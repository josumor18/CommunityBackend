<p id="notice"><%= notice %></p>

<h1>Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Iduser</th>
      <th>Idcontent</th>
      <th>Created at</th>
      <th>Isnews</th>
      <th>Isreports</th>
      <th>Isevents</th>
      <th>Titlecontent</th>
      <th>Seen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.idUser %></td>
        <td><%= notification.idContent %></td>
        <td><%= notification.created_at %></td>
        <td><%= notification.isNews %></td>
        <td><%= notification.isReports %></td>
        <td><%= notification.isEvents %></td>
        <td><%= notification.titleContent %></td>
        <td><%= notification.seen %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

